<div>
    @using (Html.BeginForm("ProjectCreate", "Project", FormMethod.Post, new { @class = "col-md-7 col-lg-8" }))
    {
        <div class="col-sm-6">
            @Html.LabelFor(p => p.Name, "Name", new { @class = "form-label" })
            @Html.TextBox("Name", "Project Name", new { @class = "form-control" })
        </div>
        <div class="col-sm-6">
            @Html.LabelFor(p => p.Description, "Description", new { @class = "form-label" })
            @Html.TextBox("Description", "Project Description", new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(p => p.ProjectLeadIDs, "Project Lead IDs", new { @class = "form-label" })
            @Html.DropDownList("ProjectLeadIDs", UserList, new { @class = "form-select", @multiple = "multiple" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(p => p.ProjectMemberIDs, "Project Member IDs", new { @class = "form-label" })
            @Html.DropDownList("ProjectMemberIDs", UserList, new { @class = "form-select", @multiple = "multiple" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(p => p.GithubAccountOwner, "Github Repo Account Holder Name", new { @class = "form-label" })
            @Html.TextBox("GithubAccountOwner", "Author Name", new { @class = "form-control"})
        </div>
        <div class="col-md-4">
            @Html.LabelFor(p => p.GithubRepoName, "Github Repo Name", new { @class = "form-label" })
            @Html.TextBox("GithubRepoName", "Repo Name", new { @class = "form-control"})
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    }
</div>
